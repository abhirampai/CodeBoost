{
  "env": {
    "browser": true,
    "es2021": true,
  },
  "parser": "@babel/eslint-parser",
  "extends": ["eslint:recommended", "plugin:react/jsx-runtime"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
  },
  "globals": {
    "process": "readonly",
  },
  "rules": {
    "sort-imports": [
      "error",
      {
        "ignoreCase": false,
        "ignoreDeclarationSort": false,
        "ignoreMemberSort": false,
        "memberSyntaxSortOrder": ["none", "all", "multiple", "single"],
        "allowSeparatedGroups": true,
      },
    ],
  },
}
